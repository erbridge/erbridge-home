{
  "name": "erbridge-home",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "classnames": "^2.2.6",
    "date-fns": "^1.29.0",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "enzyme-to-json": "^3.3.4",
    "html-to-react": "^1.3.3",
    "node-sass": "^4.9.3",
    "prop-types": "^15.6.2",
    "react": "^16.5.2",
    "react-app-rewire-markdown-with-front-matter-loader": "erbridge/react-app-rewire-markdown-with-front-matter-loader",
    "react-app-rewired": "^1.6.2",
    "react-css-transition-replace": "^3.0.3",
    "react-custom-scrollbars": "^4.2.1",
    "react-dom": "^16.5.2",
    "react-helmet": "^5.2.0",
    "react-image": "^1.5.1",
    "react-images": "^0.5.19",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.0.3"
  },
  "devDependencies": {
    "chokidar-cli": "^1.2.1",
    "directory-metagen": "^1.6.3",
    "npm-run-all": "^4.1.3",
    "react-styleguidist": "^7.3.8",
    "source-map-explorer": "^1.6.0",
    "yaml-front-matter": "^4.0.0"
  },
  "scripts": {
    "build-pages": "node scripts/pages.js",
    "watch-pages": "chokidar './src/pages/**/*.md' -c 'run-s build-pages' --initial --verbose",
    "start-js": "react-app-rewired start",
    "start": "run-p watch-pages start-js",
    "build": "run-p build-pages && react-app-rewired build",
    "test": "run-p build-pages && react-app-rewired test",
    "start-styleguide": "styleguidist server",
    "build-styleguide": "styleguidist build",
    "analyze": "source-map-explorer build/static/js/main.*"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  }
}
