{
  "name": "erbridge-home",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "@mdx-js/loader": "^0.15.7",
    "@mdx-js/mdx": "^0.15.7",
    "babel-preset-env": "^1.7.0",
    "chokidar-cli": "^1.2.1",
    "classnames": "^2.2.6",
    "date-fns": "^1.29.0",
    "directory-metagen": "^1.6.3",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "enzyme-to-json": "^3.3.5",
    "husky": "^1.2.0",
    "moment": "^2.22.2",
    "node-sass": "^4.10.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.3",
    "pretty-quick": "^1.8.0",
    "prop-types": "^15.6.2",
    "react": "^16.6.3",
    "react-app-rewired": "^1.6.2",
    "react-css-transition-replace": "^3.0.3",
    "react-custom-scrollbars": "^4.2.1",
    "react-dom": "^16.6.3",
    "react-helmet": "^5.2.0",
    "react-image": "^1.5.1",
    "react-images": "^0.5.19",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.1",
    "react-styleguidist": "^8.0.6",
    "require-from-string": "^2.0.2",
    "source-map-explorer": "^1.6.0",
    "yaml-front-matter": "^4.0.0"
  },
  "scripts": {
    "build-pages": "node scripts/convert-md-to-mdx.js && node scripts/pages.js",
    "watch-pages": "chokidar './src/pages/**/*.mdx' -c 'run-s build-pages' --initial --verbose",
    "start-js": "react-app-rewired start",
    "start": "run-p watch-pages start-js",
    "build": "run-p build-pages && react-app-rewired build",
    "test": "run-p build-pages && react-app-rewired test",
    "start-styleguide": "styleguidist server",
    "build-styleguide": "styleguidist build",
    "analyze": "source-map-explorer build/static/js/main.*"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
