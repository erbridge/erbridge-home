{
  "name": "erbridge-home",
  "private": true,
  "devDependencies": {
    "@mdx-js/loader": "^1.1.0",
    "@mdx-js/mdx": "^1.4.2",
    "babel-preset-env": "^1.7.0",
    "chokidar-cli": "^1.2.2",
    "classnames": "^2.2.6",
    "date-fns": "^1.30.1",
    "directory-metagen": "^1.6.3",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.3.5",
    "husky": "^3.0.1",
    "jest-fetch-mock": "^2.1.2",
    "moment": "^2.24.0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-app-rewired": "^2.1.3",
    "react-css-transition-replace": "^3.0.3",
    "react-custom-scrollbars": "^4.2.1",
    "react-dom": "^16.8.6",
    "react-helmet": "^5.2.1",
    "react-image": "^2.1.3",
    "react-images": "^1.0.0",
    "react-player": "^1.11.1",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.0.1",
    "safe-eval": "^0.4.1",
    "source-map-explorer": "^2.0.1",
    "yaml-front-matter": "^4.0.0"
  },
  "scripts": {
    "build-pages": "node scripts/convert-md-to-mdx.js && node scripts/pages.js",
    "watch-pages": "chokidar 'src/pages/**/*.mdx' -c 'run-s build-pages' --initial --verbose",
    "start-js": "react-app-rewired start",
    "start": "run-p watch-pages start-js",
    "build": "run-p build-pages && react-app-rewired build",
    "test": "run-p build-pages && react-app-rewired test",
    "analyze": "run-p build && source-map-explorer build/static/js/main.*",
    "format": "prettier --write '{public,scripts,src}/**/*'"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
