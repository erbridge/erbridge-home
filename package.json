{
  "name": "erbridge-home",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "classnames": "^2.2.5",
    "date-fns": "^1.29.0",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "enzyme-to-json": "^3.3.0",
    "html-to-react": "^1.3.1",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-app-rewire-markdown-with-front-matter-loader": "erbridge/react-app-rewire-markdown-with-front-matter-loader",
    "react-app-rewired": "^1.4.0",
    "react-css-transition-replace": "^3.0.2",
    "react-custom-scrollbars": "^4.2.1",
    "react-dom": "^16.2.0",
    "react-helmet": "^5.2.0",
    "react-image": "^1.3.1",
    "react-images": "^0.5.6",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.0.17",
    "react-styleguidist": "^6.0.33",
    "source-map-explorer": "^1.5.0"
  },
  "devDependencies": {
    "node-sass-chokidar": "^0.0.3",
    "npm-run-all": "^4.1.2"
  },
  "scripts": {
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "run-s build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "start-js": "react-app-rewired start",
    "start": "run-p watch-css start-js",
    "build": "run-s build-css && react-app-rewired build",
    "test": "run-s build-css && react-app-rewired test --env=jsdom",
    "start-styleguide": "styleguidist server",
    "build-styleguide": "styleguidist build",
    "analyze": "source-map-explorer build/static/js/main.*"
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
